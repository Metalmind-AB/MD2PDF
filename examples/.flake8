[flake8]
# Relaxed rules for example files
max-line-length = 120
ignore =
    # Allow imports after path manipulation
    E402,
    # Allow f-strings without placeholders
    F541,
    # Allow long lines in examples for readability
    E501,
    # Allow unused imports in demos
    F401
exclude =
    __pycache__,
    .git,
    .venv,
    venv,
    *.pyc
